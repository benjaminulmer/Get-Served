        <Button x:Name="orderButton" Content="Place Order" HorizontalAlignment="Left" VerticalAlignment="Top" Width="168" Height="76" FontSize="24" Background="White" Click="orderButton_Click" Canvas.Left="11" Canvas.Top="580"/>
    </Canvas>
</Window>
